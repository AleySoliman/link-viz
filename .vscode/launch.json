    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Test Linkviz",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Run with Node.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            //"program": "${workspaceFolder}\\quranRecitationDownloader.mjs"
            "program": "${workspaceFolder}/node.js/fileDownloaderProxy.mjs"
        }
    ]
}